{
    // 让 Code Runner 在终端中运行，支持交互式输入
    "code-runner.runInTerminal": true,
    // 运行前清除之前的输出
    "code-runner.clearPreviousOutput": true,
    // 运行前保存文件
    "code-runner.saveFileBeforeRun": true,
    // 自定义 C++ 运行命令（如果在子文件夹中，编译所有cpp文件；否则只编译当前文件）
    "code-runner.executorMap": {
        "cpp": "cd $dir && if [ \"$dir\" != \"$workspaceRoot/\" ] && [ $(ls -1 *.cpp 2>/dev/null | wc -l) -gt 1 ]; then g++ -std=c++17 *.cpp -o main && ./main; else g++ -std=c++17 $fileName -o $fileNameWithoutExt && ./$fileNameWithoutExt; fi"
    },
    "files.associations": {
        "__bit_reference": "cpp",
